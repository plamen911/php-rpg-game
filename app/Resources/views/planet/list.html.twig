{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="well">
            <h2>All Planets -
                <a href="{{ path('planet_create') }}" class="btn btn-warning">Create New</a>
            </h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Coordinates</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for planet in planets %}
                        <tr>
                            <td>{{ planet.id }}</td>
                            <td>{{ planet.getName() }}</td>
                            <td>X = {{ planet.getX() }}, Y = {{ planet.getY() }}</td>
                            <td>
                                <a href="{{ path('planet_edit', {'id': planet.id}) }}">Edit</a>
                                <a href="{{ path('planet_delete', {'id': planet.id}) }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}